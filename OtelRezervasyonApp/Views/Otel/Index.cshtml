@model IEnumerable<OtelRezervasyonApp.Data.Entities.Otel>

@* @model OtelRezervasyonApp.Data.Entities.Otel *@


@{
	ViewData["Title"] = "Index";
}

<h4>Otel İşlemleri</h4>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table table-striped">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Adi)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Aciklama)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.OtelTuru)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Yildizi)
			</th>


			@* <th>
				Kapasite
			</th> *@


			<th>
				@Html.DisplayNameFor(model => model.Adres)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Ulke)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Sehir)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Telefon)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Email)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Logo)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Adi)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Aciklama)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.OtelTuru.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Yildizi)
				</td>

				@* 	<td>
			@Html.DisplayFor(modelItem => item.OtelSezonKapasiteleri.Sum(otelSezonKapasite => otelSezonKapasite.OtelSezonKapasite))
			</td> *@

				<td>
					@Html.DisplayFor(modelItem => item.Adres)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Ulke.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Sehir.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Telefon)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>


				<td>
					<img src="@item.Logo" alt="Otel Logo" style="max-width: 50px; max-height: 50px;" />
				</td>


				<td>
					<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
