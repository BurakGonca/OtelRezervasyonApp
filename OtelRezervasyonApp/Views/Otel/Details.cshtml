@model OtelRezervasyonApp.Data.Entities.Otel

@{
	ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
	<h4>Otel</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Adi)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Adi)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Aciklama)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Aciklama)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.OtelTuru)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.OtelTuru.Name)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Yildizi)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Yildizi)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Adres)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Adres)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Ulke)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Ulke.Name)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Sehir)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Sehir.Name)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Telefon)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Telefon)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Email)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Email)
		</dd>

		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.OtelinOdalari)
		</dt>
		<dd class="col-sm-10">
			@if (Model.OtelinOdalari == null || !Model.OtelinOdalari.Any())
			{
				<p>Otele ait oda bilgisi bulunmamaktadır.</p>
			}
			@foreach (var oda in Model.OtelinOdalari)
			{
				<span>@oda.OdaNumarasi</span>
				if (oda != Model.OtelinOdalari.Last())
				{
					<span>,</span>
				}
			}
		</dd>

		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Logo)
		</dt>
		<dd class="col-sm-10">
			<td>
				<img src="@Model.Logo" alt="Otel Logo" style="max-width: 70px; max-height: 70px;" />
			</td>
		</dd>


	</dl>
</div>
<div>
	<a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
	<a asp-action="Index">Back to List</a>
</div>
