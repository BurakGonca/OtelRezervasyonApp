    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    <h1 class="display-4">Otelim.com'a Hoşgeldiniz!</h1>
    <h6><a href="#" class="text-decoration-none">Otelinizin her detayını tek bir yerden yönetebilir, müşteri taleplerini karşılamak için odalarınızı ve kapasitenizi optimize edebilirsiniz. Ayrıca, otel türleri, şehirler ve ülkeler gibi çeşitli parametrelerle geniş bir veri yelpazesine erişebilirsiniz. Bu platform , otel işletmenizi verimli bir şekilde yönetmenize ve daha fazla başarı elde etmenize yardımcı olacaktır. Keyifli kullanımlar dileriz!</a></h6>
    
</div>


<div id="carouselExampleRide" class="carousel slide" data-bs-ride="true">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/images/foto2.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/foto3.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/foto1.jpg" alt="Third slide">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleRide" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleRide" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>