<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Otelim.com</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/OtelRezervasyonApp.styles.css" asp-append-version="true" />
</head>
<body style="background-image: url('/images/arkaplan2.jpg'); background-size: cover;">
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" style="margin-top: 20px">
			<div class="container-fluid">
				@* <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">OtelRezervasyonApp</a> *@
				<a class="navbar-brand" asp-controller="Home" asp-action="Index"> <img src="~/images/logo.jpg" style="width: 150px; height: auto; align-items:center" /> </a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Otel" asp-action="Index">Oteller</a>
						</li>

						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="OtelKapasitesi" asp-action="Index">Otel Kapasitesi</a>
						</li>

						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="OtelSezonKapasitesi" asp-action="Index">Otel Sezon Kapasitesi</a>
						</li>

						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="OtelOdasi" asp-action="Index">Otel Odasi İşlemleri</a>
						</li>

						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="OtelTuru" asp-action="Index">Otel Türü</a>
						</li>

						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Ulke" asp-action="Index">Ülke İşlemleri</a>
						</li>

						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Sehir" asp-action="Index">Şehir İşlemleri</a>
						</li>

						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">Hakkımızda</a>
						</li>

						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">İletişim</a>
						</li>


					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2024 - OtelRezervasyonApp - <a asp-area="" asp-controller="Otel" asp-action="Index">Oteller</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
